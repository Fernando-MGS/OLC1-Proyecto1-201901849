package analizadores; 
import java_cup.runtime.*;

parser code 
{:
    /**
     * Método al que se llama automáticamente ante algún error sintactico.
     **/ 
    public void syntax_error(Symbol s){ 
        System.out.println("Error Sintáctico en la Línea " + (s.left) +
        " Columna "+s.right+ ". No se esperaba este componente: " +s.value+"."); 
    } 

    /**
     * Método al que se llama automáticamente ante algún error sintáctico 
     * en el que ya no es posible una recuperación de errores.
     **/ 
    public void unrecovered_syntax_error(Symbol s) throws java.lang.Exception{ 
        System.out.println("Error síntactico irrecuperable en la Línea " + 
        (s.left)+ " Columna "+s.right+". Componente " + s.value + 
        " no reconocido."); 
    }  
:}

terminal mas, menos, div, por;
terminal hash, igual, llave_i, llave_d;
terminal coma,par_i, par_d, ptcoma;
terminal coma_f,d_punto,punto,cor_i,cor_d;
terminal dolar,com,comm;

terminal String entero,cadena,digitos,letra,name;
terminal pdefinir,preporte,pgrafb,pgrafp,pgrafl;
terminal pcompare,tstring,tdouble,title,pejex;
terminal pvalue,pfile,title_x,title_y;




non terminal INICIO;
non terminal FUNCION;
non terminal INSTRUCCION;
non terminal DECLARACION;
non terminal GLOBALES;
non terminal COMENTARIOS;

//precedencia
precedence left mas,menos;
precedence left por,div;

start with INICIO;

INICIO::=INSTRUCCION;

FUNCION::=
    pdefinir
    |preporte
    |pgrafb
    |pgrafp
    |pgrafl
    |pcompare
;


INSTRUCCION::=
    mas
    |menos
    |por
    |div
;

COMENTARIOS::=
    com
|   comm
;



